    </tr>

    <tr>
      <td>Comment on talks</td>
      <td><%= $response->{'talks-rating-comment'} %></td>
    </tr>

    <tr>
      <td>Songs</td>
      <td><%= $response->{'songs-rating'} %></td>
    </tr>

    <tr>
      <td>Comment on songs</td>
      <td><%= $response->{'songs-rating-comment'} %></td>
